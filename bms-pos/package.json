{
  "name": "bms-pos",
  "version": "1.0.0",
  "description": "BMS POS - Point of Sale Desktop Application",
  "main": "dist/main.js",
  "homepage": "./",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build",
    "format": "npx prettier --write src/",
    "format:check": "npx prettier --check src/",
    "lint": "npx eslint . --fix",
    "types": "npx tsc --noEmit",
    "electron:dev": "concurrently -k -n \"VITE,ELECTRON\" -c \"blue,green\" \"npm run dev\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build:renderer && electron-forge make",
    "electron:build:win": "npm run build:renderer && electron-forge make --platform=win32",
    "electron:build:mac": "npm run build:renderer && electron-forge make --platform=darwin",
    "electron:build:linux": "npm run build:renderer && electron-forge make --platform=linux",
    "electron:package": "npm run build:renderer && electron-forge package",
    "build:renderer": "npx vite build --config vite.electron.config.ts",
    "clean": "npm run clean:node && npm run clean:lock",
    "clean:node": "rimraf node_modules",
    "clean:lock": "rimraf package-lock.json",
    "build:nomini": "cross-env NODE_OPTIONS=\"--max-old-space-size=4096\" vite build --minify false",
    "build:optimized": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" npm run build",
    "build:electron-app": "rimraf dist && cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" npm run build:renderer",
    "build:light": "npm run clean:dist && npm run build:renderer",
    "build:frontend": "npm run build",
    "build:all": "rimraf dist && npm run build:renderer && npm run electron:build",
    "clean:dist": "rimraf dist",
    "build:win": "npm run build:electron-app && npm run electron:build:win",
    "build:linux": "npm run build:electron-app && npm run electron:build:linux",
    "build:status": "echo 'Build Status:' && echo '- Web Frontend: Vite Build (Medium Memory ~2GB)' && echo '- Electron Frontend: Electron Forge Build (Medium Memory ~2GB)' && echo '- Total Estimated Memory: ~4GB if built together, ~1GB if separated'"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-toast": "^1.2.7",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.4.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "electron-is-dev": "^3.0.1",
    "lucide-react": "^0.400.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2",
    "socket.io-client": "^4.7.4",
    "sonner": "^1.4.0",
    "tailwind-merge": "^2.5.0",
    "tailwindcss": "^3.4.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.0",
    "@electron-forge/maker-deb": "^7.3.0",
    "@electron-forge/maker-dmg": "^7.3.0",
    "@electron-forge/maker-rpm": "^7.3.0",
    "@electron-forge/maker-squirrel": "^7.3.0",
    "@electron-forge/maker-zip": "^7.3.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.0",
    "@electron-forge/plugin-fuses": "^7.3.0",
    "@electron-forge/plugin-vite": "^7.3.0",
    "@types/node": "^22.13.5",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "electron": "^38.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "postcss": "^8.4.35",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^5.0.10",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.23.0",
    "vite": "^7.1.12",
    "wait-on": "^8.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "BMS POS",
        "executableName": "bms-pos",
        "appBundleId": "com.bmspos.electron",
        "appCategoryType": "public.app-category.business",
        "icon": "src/main/assets/icon",
        "iconUrl": "src/main/assets/icon",
        "extraResource": [
          "src/main/resources"
        ],
        "directories": {
          "output": "dist-electron"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel"
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "options": {
              "name": "bms-pos",
              "productName": "BMS POS",
              "genericName": "Bagus Management Suite POS",
              "description": "BMS POS - Point of Sale Desktop Application",
              "maintainer": "Your Name <muhammadhafla@gmail.com>",
              "category": "Office"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "options": {
              "name": "bms-pos",
              "productName": "BMS POS",
              "genericName": "Business Management Suite POS",
              "description": "BMS POS - Point of Sale Desktop Application",
              "maintainer": "Your Name <your.email@example.com>",
              "category": "Office"
            }
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "title": "${productName} ${version}",
            "icon": "src/main/assets/icon.icns",
            "format": "ULFO"
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-vite",
          {
            "build": [
              {
                "entry": "src/main/main.js",
                "config": "vite.electron.config.ts"
              }
            ],
            "renderer": []
          }
        ],
        [
          "@electron-forge/plugin-auto-unpack-natives",
          {}
        ],
        [
          "@electron-forge/plugin-fuses",
          {
            "fuses": {
              "runAsNode": false,
              "enableCookieEncryption": true,
              "enableEmbeddedAsarIntegrityValidation": true,
              "onlyLoadAppFromAsar": true
            }
          }
        ]
      ]
    }
  }
}
