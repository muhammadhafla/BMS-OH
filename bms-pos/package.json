{
  "name": "bms-pos",
  "version": "1.0.0",
  "description": "BMS POS - Point of Sale Progressive Web Application",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "npx vite",
    "build": "npx vite build",
    "format": "npx prettier --write src/",
    "format:check": "npx prettier --check src/",
    "lint": "npx eslint src/ --fix",
    "lint:check": "npx eslint src/",
    "lint:all": "npx eslint . --fix",
    "lint:config": "npx eslint *.config.js",
    "types": "npx tsc --noEmit",
    "types:check": "npx tsc --noEmit --skipLibCheck",
    "preview": "npx vite preview",
    "clean": "npm run clean:node && npm run clean:lock",
    "clean:node": "rimraf node_modules",
    "clean:lock": "rimraf package-lock.json",
    "build:optimized": "cross-env NODE_OPTIONS=\"--max-old-space-size=2048\" npm run build",
    "build:light": "npm run clean:dist && npm run build",
    "build:all": "rimraf dist && npm run build",
    "clean:dist": "rimraf dist",
    "build:status": "echo 'Build Status:' && echo '- PWA Frontend: Vite Build (Medium Memory ~2GB)' && echo '- Total Estimated Memory: ~2GB'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "quality:analyze": "node scripts/quality-analysis.js",
    "quality:report": "npm run quality:analyze && echo 'Report generated in quality-reports/'",
    "quality:watch": "npm run quality:analyze -- --watch",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-toast": "^1.2.7",
    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.0",
    "lucide-react": "^0.400.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2",
    "socket.io-client": "^4.7.4",
    "sonner": "^1.4.0",
    "swr": "^2.3.8",
    "tailwind-merge": "^2.5.0",
    "tailwindcss": "^3.4.0",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.5",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.35",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.6",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.23.0",
    "vite": "^7.1.12",
    "vite-plugin-pwa": "^0.21.2"
  }
}
