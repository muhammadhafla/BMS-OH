# BMS POS Environment Configuration
# Copy this file to .env and update the values

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_TAILSCALE_API_IP=

# Authentication Configuration
VITE_SESSION_TIMEOUT=24
VITE_ENABLE_SECURE_COOKIES=true

# Default User Credentials (Hashed passwords will be auto-generated)
VITE_ADMIN_USERNAME=admin
VITE_ADMIN_PASSWORD_HASH=
VITE_CASHIER_USERNAME=cashier1
VITE_CASHIER_PASSWORD_HASH=
VITE_MANAGER_USERNAME=manager1
VITE_MANAGER_PASSWORD_HASH=

# Security Settings
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_TOKEN_REFRESH_INTERVAL=3600

# Development Settings
VITE_MOCK_MODE=false
VITE_DEBUG_MODE=false